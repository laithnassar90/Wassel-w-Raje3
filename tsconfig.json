{
  "compilerOptions": {
    // Target and Library Settings
    "target": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    
    // Module Resolution
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    
    // Alias Configuration (CRUCIAL for @/ imports)
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"] 
    },
    
    // JSX and React
    "jsx": "react-jsx",
    "useDefineForClassFields": true,
    
    // Type Checking and Consistency
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    
    // Other Settings
    "noEmit": true,
    "allowJs": false,
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx"
  ]
}
